<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="STRIVE.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:STRIVE"
    Shell.FlyoutBehavior="Disabled"
    Title="STRIVE">

    <TabBar>
        <ShellContent
            Title="Тренировки"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'trainings.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="Календарь"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'calendar.png'}" />
        
        <ShellContent
            Title="Друзья"
            ContentTemplate="{DataTemplate local:FriendsPage}"
            Icon="{OnPlatform 'friends.png'}" />
        
        <ShellContent
            Title="Профиль"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'profile.png'}" />
    </TabBar>
</Shell>
